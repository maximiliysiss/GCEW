@model GCEWWeb.Models.ControllerModels.LoginModel

@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" href="~/lib/Login_v14/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/lib/Login_v14/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/lib/Login_v14/css/main.css">
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-62 p-r-62 p-t-45 p-b-45">
                <form class="login100-form validate-form flex-sb flex-w" asp-action="Login" method="post">
                    <label class="login100-form-title p-b-32">
                        Log In
                    </label>

                    <label asp-for="Login" class="txt1 p-b-11">
                        Login
                    </label>
                    <div class="wrap-input100 validate-input m-b-36 alert-validate">
                        <input asp-for="Login" class="input100">
                        <span class="focus-input100"></span>
                        <span class="alert-validate-before" asp-validation-for="Login"></span>
                        <div></div>
                    </div>
                    <span  class="text-danger"></span>

                    <label asp-for="Password" class="txt1 p-b-11">
                        Password
                    </label>
                    <div class="wrap-input100 validate-input m-b-12 alert-validate">
                        <input asp-for="Password" class="input100">
                        <span class="focus-input100"></span>
                        <span class="alert-validate-before" asp-validation-for="Password"></span>
                        <div></div>
                    </div>

                    <div class="flex-sb-m w-full p-b-48">
                        <div class="contact100-form-checkbox">

                        </div>

                        <div>
                            <a href="#" class="txt3">
                                Forgot Password?
                            </a>
                        </div>
                    </div>

                    <div class="container-login100-form-btn">
                        <input type="submit" value="Login" class="login100-form-btn" />
                        @Html.ActionLink("Register", "Register", "Account", new { }, new { @class = "login100-form-btn", @style = "margin-right: 0; margin-left: auto; text-decoration: none; color: #fff;" })
                    </div>
                </form>
            </div>

        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <script src="~/lib/jquery/dist/jquery.js"></script>

</body>
</html>