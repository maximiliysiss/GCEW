<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>jQuery UI Draggable - Default functionality</title>
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="/resources/demos/style.css">
    <style>
        #draggable {
            width: 150px;
            height: 150px;
            padding: 0.5em;
        }
    </style>
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/lib/leader-line-master/leader-line.min.js"></script>
</head>
<body>

    <div id="draggable" class="ui-widget-content">
        <p>Drag me around</p>
    </div>

    <div id="draggable1" style="top: 100px" class="ui-widget-content">
        <p>Drag me around</p>
    </div>
</body>
</html>

<script>

    var myLine;

    $(function () {
        myLine = new LeaderLine(
            document.getElementById('draggable'),
            document.getElementById('draggable1')
        );
    });

    $(".ui-widget-content").draggable({
        drag: function () {
            console.log("pos");
            myLine.position();
        }
    });

</script>