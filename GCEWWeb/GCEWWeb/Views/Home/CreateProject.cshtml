@model GCEWWeb.Models.Database.Project

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <title>CreateProject</title>
    <style>
        .form {
            position: absolute;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100%;
            width: 100%;
        }
    </style>
</head>
<body>

    <div class="form">
        <div class="col-md-4">
            @using (Html.BeginForm("CreateProject", "Home", FormMethod.Post))
            {
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                    <input name="RedirectToProject" id="RedirectToProject" type="hidden" value="@(ViewBag.RedirectToProject??false)" />
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            }
        </div>
        <div>
            <a asp-action="Projects">Back to List</a>
        </div>
    </div>

</body>
</html>
